[flake8]
# Flake8 configuration for ALA-GUI

# Maximum line length (match black)
max-line-length = 88

# Extend ignore list
extend-ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .tox,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .venv

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    # Imports in __init__.py
    __init__.py:F401,F403
    # Test files can have longer lines
    tests/*:E501

# Show source code
show-source = True

# Show error codes
show-pep8 = False

# Count errors
count = True

# Statistics
statistics = True
